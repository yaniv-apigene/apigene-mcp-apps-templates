{
  "name": "mcp-app-base-template-sdk",
  "version": "1.0.0",
  "description": "Base template for MCP Apps using the official SDK with Vite bundling",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "preview": "vite preview",
    "server": "tsx main.ts",
    "start": "npm run build && npm run server",
    "dev:full": "concurrently \"npm run dev\" \"tsx watch main.ts\""
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0"
  }
}
